      <url>http://localizable-doclet.googlecode.com/svn/maven2/</url>
    </repository>
    <repository>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>http://maven.seasar.org/maven2</url>
    </repository>
    <repository>
      <id>ibiblio</id>
      <name>ibiblio</name>
      <url>http://www.ibiblio.org/maven2/</url>
    </repository>
    <repository>
      <id>artifact.xerial.org</id>
      <name>www.xerial.org Repository</name>
      <url>http://www.xerial.org/maven/repository/artifact/</url>
    </repository>
    <repository>
      <id>snapshot.www.xerial.org</id>
      <name>www.xerial.org Repository</name>
      <url>http://www.xerial.org/maven/repository/snapshot/</url>
      <snapshots><enabled>true</enabled></snapshots>
    </repository>
